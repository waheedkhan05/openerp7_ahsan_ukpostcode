<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_partner_form_postcode">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/group//field[@name='country_id']" position="before">
                <field name="postcode" class="oe_no_button" options='{"no_open": True}' attrs="{'readonly': [('use_parent_address','=',True)]}" placeholder="Post Code"  on_change="onchange_postcode(postcode)"/>
                
            </xpath>
        </field>
    </record>
    </data>
</openerp>
